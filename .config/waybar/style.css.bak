* {
    border: none;
    border-radius: 0;
    font-family: "JetBrains Mono Nerd Font", FontAwesome, sans-serif;
    font-size: 14px;
    min-height: 0;
}

window#waybar {
    background-color: rgba(29, 30, 46, 0.85); /* Dark, slightly transparent background */
    color: #cdd6f4; /* Base text color */
    transition-property: background-color;
    transition-duration: .5s;
    border-bottom: 2px solid #1e1e2e;
}


#clock {
  padding-left: 20px;
}

